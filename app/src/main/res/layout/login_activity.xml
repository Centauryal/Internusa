<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/btnSubmit"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/header"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senang melihat Anda kembali. "
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukkan alamat email atau no handphone dan password untuk memulai dan pembayaran online. "
                android:gravity="left"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="60dp"
                />

            <EditText
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_with_shadow"
                android:hint="No Handphone / Email"
                android:padding="15dp"
                android:textSize="15sp"
                android:id="@+id/txtAgenid"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                />

            <EditText
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_with_shadow"
                android:hint="Pin / Password"
                android:padding="15dp"
                android:textSize="15sp"
                android:id="@+id/txtPassword"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktifasi Ulang?"
                android:gravity="right"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:id="@+id/txtAktifasi"
                android:textColor="@color/yellow"
                />



        </LinearLayout>
    </ScrollView>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="LOGIN"
        android:textColor="@color/yellow"
        android:id="@+id/btnSubmit"
        android:background="@color/redlight"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>