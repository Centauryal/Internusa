<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black3d"
        android:padding="5dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnLanjutkan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Lanjut"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        >

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Masukkan nominal SALDO yang ingin Anda isi."
                android:gravity="center"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/txtNominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_line"
                android:hint="Rp.0"
                android:padding="10sp"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Agar sistem dapat memverifikasi transferan dari Anda secara otomatis, maka kami menciptakan kode unik yang harus Anda kirim sesuai jumlah yang kami sebutkan, dan yang harus Anda transfer."
                android:gravity="center"
                android:layout_margin="10dp"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>