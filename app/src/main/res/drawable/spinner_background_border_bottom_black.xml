<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:bottom="-2dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <gradient android:angle="90" android:endColor="#00000000" android:startColor="#00000000" android:type="linear" />
                    <stroke android:width="1dp" android:color="@color/redlight" />
                    <corners android:radius="0dp" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

                </shape>
            </item>
            <item android:right="5dp">
                <bitmap android:src="@drawable/ic_menu_arrow_down" android:gravity="center_vertical|right" />
            </item>
        </layer-list>
    </item>
</selector>